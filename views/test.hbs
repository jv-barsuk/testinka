<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="static/style/style.css" >
    <script src="static/js/main.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Comfortaa:wght@300..700&family=Indie+Flower&family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <title>Testinka</title>
</head>
<body>
    <h1>{{name}}</h1>
    {{#each scenario}}
        <h2 class="name"><span name-tooltip = {{this.collection.type}}>{{this.collection.name}}</span></span></h2> 
        <div class="cdescription"><span title-description-tooltip = "description">{{this.collection.description}}</span></div>
        
        <div class="variables">
            {{#each this.variables}}
                <span class="variable">{{this}}</span>
            {{/each}}
        </div>
        {{#each this.collection.test_cases}}
        <div class="collection">
            <h3 class="name"><span class="type"> <span type-tooltip = {{this.type}}>{{this.name}}</span></span></h3>
            <div class="description"><span title-description-tooltip = "description">{{this.description}}</span></div>
            <div class="round_table">
                <table class="teststep_table">
                <thead>
                    <tr>
                        <th></th>
                        <th>name</th>                
                        <th>expected result</th>
                        <th>test notes</th>
                        </div>
                    </tr>
                </thead>
                <tbody>
                {{#each this.steps}}
                    <tr class="teststep">
                        <td class="">
                            <button class="button_ok">OK</button>
                            <button class="button_fail">FAIL</button>
                            <button class="button_ignored">ignored</button>
                        </td>
                        <td class="name">{{this.name}} 
                            {{#if this.description}}<span description-tooltip="{{this.description}}">i </span>{{/if}} 
                            {{#if this.url}}<a class="external" href="{{this.url}}" target="_blank"></span>{{/if}}
                        </td>
                        <td class="result">{{this.expected_result}}</td>
                        <td class="note"><input type="text"/></td>
                        
                    </div>
                {{/each}}
                </tbody>
                </table>
            </div>
        </div>
        {{/each}}
    {{/each}}
</body>
</html>